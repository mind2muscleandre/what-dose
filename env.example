# ==========================================
# WHATDOSE ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env.local and fill in your values
# ==========================================

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

# Supabase Project URL
# Format: https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anon/Public Key
# This is safe to expose in the browser (protected by RLS)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Optional - only for server-side admin operations)
# ⚠️ NEVER expose this in client-side code!
# Only use in API routes or server components
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# NEXT.JS CONFIGURATION
# ==========================================

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Next.js App URL (for local development)
# Format: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==========================================
# GOOGLE ANALYTICS (Optional)
# ==========================================
# Get your Measurement ID from Google Analytics 4:
# https://analytics.google.com → Admin → Data Streams → Your Stream → Measurement ID
# Format: G-XXXXXXXXXX

NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==========================================
# VERCEL ANALYTICS (Optional)
# ==========================================
# Vercel Analytics works automatically when deployed to Vercel
# If you want to enable it locally, you can set this (usually not needed)
# NEXT_PUBLIC_VERCEL_ENV=development

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================
# Enable/disable features
# NEXT_PUBLIC_ENABLE_COMMUNITY=true
# NEXT_PUBLIC_ENABLE_ANALYTICS=true

